{% if message.is_success %}
<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
   <strong class="font-bold">投稿が完了しました。</strong>
</div>
{% endif %}
{% if message.is_failed %}
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
   <strong class="font-bold">投稿に失敗しました。</strong>
</div>
{% endif %}
{% if message.is_delete_success %}
<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
   <strong class="font-bold">削除が完了しました。</strong>
</div>
{% endif %}
{% if message.is_delete_failed %}
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
   <strong class="font-bold">削除に失敗しました。</strong>
</div>
{% endif %}
